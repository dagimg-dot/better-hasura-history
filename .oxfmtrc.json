{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "jsxSingleQuote": false,
  "singleQuote": true,
  "trailingComma": "all",
  "endOfLine": "lf",
  "printWidth": 100,
  "semi": false,
  "tabWidth": 2,
  "useTabs": false,
  "sortPackageJson": false,
  "ignorePatterns": ["build", "coverage", "node_modules", "pnpm-lock.yaml", "pnpm-workspace.yaml"]
}
